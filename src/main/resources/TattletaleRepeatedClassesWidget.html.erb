<div class="yui-g">
	<div class="dashbox" style="height:100%">
		<p class="title">
			<%= message('widget.repeatedclasses.title') -%>
		</p>
		<% if measure('html_repeatedclasses') && measure('repeatedclasses') %>
			<p>
				<span class="big"> <%= format_measure('repeatedclasses') -%> <%= tendency_icon(measure('repeatedclasses')) -%></span>
			</p>
			<script type="text/javascript">
				function fillsRepeatedClasses() {
					<% if (measure('repeatedclasses').value.to_i > 0) %>
						document.getElementById('repeatedClassesIframe').contentDocument.body.innerHTML = '<%= measure('html_repeatedclasses').data -%>';
					<% end %>
				}
	
				Event.observe(window, 'load', function() {
					fillsRepeatedClasses();
				});
			</script>
		<% else %>
			<br />
			<p>
				<%= message('widget.sonar-tattletale-plugin.error') -%>
			</p>
		<% end %>
	</div>
</div>
<% if measure('html_repeatedclasses') && measure('repeatedclasses') %>
	<% if (measure('repeatedclasses').value.to_i > 0) %>
		<iframe id="repeatedClassesIframe" width="100%" style="border: 0"></iframe>
	<% end %>
<% end %> 